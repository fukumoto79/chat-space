.chat-main
  .chat-main__group-info
    .main-top
      .main-top__left
        .main-top__left__top
          test
        .main-top__left__bottom
          Member : masa
      .main-top__right
      = link_to "#", class: "main-top__right__edit" do
        Edit
  .chat-main__message-list
    .MessageField
      = render @messages
    .main-main
      .main-main__top
        .main-main__top__left
          masa&nbsp;
        .main-main__top__right
          2019/11/20(Wed) 17:43:34
      .main-main__bottom
        おはよう！
  .chat-main__message-form
    %form.new-form
      .input-box
        %input{type: "text", class: "input-box__message", placeholder: "type a message"}
        %label{class: "input-box__image"}
          = icon('fas', 'image')
          %input{type: "file", class: "input-box__image__file"}
      %input{type: "submit", class: "submit-btn", value: "Send"}
  .Footer
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__inputContent', placeholder: 'type a message'
        = f.label :image, class: 'Form__inputImage' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__submit'